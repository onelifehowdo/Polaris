<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sline.com.polaris.DoorActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/indexImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/index"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>
        <EditText
            android:id="@+id/input"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:cursorVisible="false"
            android:lines="1"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"
            android:textColor="#80ffffff"
            android:inputType="text"
            android:background="#65000000"
            />
        <ImageView
            android:id="@+id/cloud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/cloud"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/doorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/doorImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/switcher"
            android:alpha="0.9"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/icon"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:id="@+id/toolsBarBody"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@mipmap/setting" />

            <LinearLayout
                android:id="@+id/toolsBar"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_margin="0dp"
                android:layout_below="@+id/setting"
                android:visibility="invisible"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/updata"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@mipmap/updata"/>
                <ImageView
                    android:id="@+id/returndata"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@mipmap/returndata"/>
                <ImageView
                    android:id="@+id/shutdown"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@mipmap/shutdown"/>/>
                <ImageView
                    android:id="@+id/restart"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@mipmap/restart"/>
                <ImageView
                    android:id="@+id/cancel"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@mipmap/cancel"/>
                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@mipmap/delete"/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
